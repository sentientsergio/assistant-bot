{
  "name": "assistant-bot-gateway",
  "version": "0.1.0",
  "description": "Gateway daemon for assistant-bot",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/index.js",
    "start:dev": "NODE_ENV=development node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "restart:dev": "launchctl unload ~/Library/LaunchAgents/bot.assistant.gateway.dev.plist 2>/dev/null; launchctl load ~/Library/LaunchAgents/bot.assistant.gateway.dev.plist",
    "restart:prod": "launchctl unload ~/Library/LaunchAgents/bot.assistant.gateway.prod.plist 2>/dev/null; launchctl load ~/Library/LaunchAgents/bot.assistant.gateway.prod.plist",
    "stop:dev": "launchctl unload ~/Library/LaunchAgents/bot.assistant.gateway.dev.plist 2>/dev/null || true",
    "stop:prod": "launchctl unload ~/Library/LaunchAgents/bot.assistant.gateway.prod.plist 2>/dev/null || true",
    "logs:dev": "tail -f ~/Library/Logs/assistant-bot/gateway.dev.log",
    "logs:prod": "tail -f ~/Library/Logs/assistant-bot/gateway.prod.log",
    "dev:clone": "bash scripts/dev-clone.sh",
    "dev:wipe": "bash scripts/dev-wipe.sh",
    "test:memory": "npx tsx scripts/test-memory.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "@lancedb/lancedb": "^0.23.0",
    "apache-arrow": "^18.1.0",
    "cheerio": "^1.2.0",
    "dotenv": "^17.2.3",
    "grammy": "^1.39.3",
    "node-cron": "^3.0.3",
    "openai": "^6.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.5.13",
    "open": "^11.0.0",
    "typescript": "^5.7.0"
  }
}
